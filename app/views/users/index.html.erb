<h1>Listing Users</h1>
<hr />
  <%= link_to 'New user', new_user_path %>
  
  
<table>

  <tr>
    <th>Name</th>
    <th>Surname</th>
    <th></th>
  <hr />
  </tr>
 
 
  <% @user.each do |user| %>
  
    <tr>
  
      <td><%= user.name %></td>
      <td><%= user.surname %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>

    


  <% end %>
</table>
